pipeline{
     agent any
     environment {
	  appEnv = "DEV"
	  appEnv = "QA"
	  appEnv = "UAT"
     }
     stages{
        stage('deploy to DEV'){
	   when {
		  environment name: 'appEnv', value: 'DEV'
	   }
	  steps{
	  	echo "deploy to dev"
   	  }
        }
        stage('deploy to QA'){
           when {
	          environment name: 'appEnv', value: 'QA'
	   }
	  steps{
	  	echo "deploy to qa"
   	  }
        }
        stage('deploy to UAT'){
            when {
	          environment name: 'appEnv', value: 'UAT'
	   }
	  steps{
	  	echo "deploy to uat"
   	  }
        }
     }
}
